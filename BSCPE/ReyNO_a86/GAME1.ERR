bordD   db      'л                                                          л','$'
bordE   db      'л                                                          л','$'
bordF   db      'л                                                          л','$'
bordG   db      'л   л     л                                                л','$'
bordH   db      'л   л          л                                          лл','$'
bordI   db      'л                  л л                                      ','$'
bordJ   db      'л      л                                               л   л','$'
bordK   db      'л                                                          л','$'
