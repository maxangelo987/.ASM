crsr    proc    near

        MOV     dh,     ch
        MOV     dl,     cl
        MOV     ah,     02
        INT     10H

        RET

        crsr    endp
;---------------------------
aste    proc    near

        MOV     ah,     09H
        LEA     dx,     ast
        INT     21H
        RET
