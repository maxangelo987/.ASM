ast     db      'л','$'
spc     db      'В','$'

;===========

main    proc    near
        MOV     ch,     00
        MOV     cl,     04

        CALL    crsr

        CALL    brd

        MOV     ch,     01
        MOV     cl,     04

        CALL    crsr

        CALL    aste
LEAP2:


LEAP1:
        MOV     ah,     07
        INT     21H

        CMP     al,     'w'
        JE      upp
        CMP     al,     's'
        JE      dwnn
        CMP     al,     'a'
        JE      lftt
        CMP     al,     'd'
        JE      rghtt
	CMP	al,	'e'
        JE      asd
        JMP LEAP1
;-------------------------
upp:
        CALL    ups
        CMP     al,     'л'
        JNE    inxt

        INC     ch
        JMP LEAP2

inxt:
        CMP     al,     'X'
        JNE     nxt      

        INC     ch
        JMP LEAP2
nxt:
        INC     ch
        CALL    crsr
        CALL    spce
        DEC     ch
        CALL    crsr
        CALL    aste
        JMP     LEAP1
;---------------------------
dwnn:
        CALL    downs
        CMP     al,     'л'
        JNE     inxt1

        DEC     ch
        JMP LEAP2

inxt1:

        CMP     al,     'X'
        JNE     nxt1      

        DEC     ch
        JMP LEAP2
nxt1:
        DEC     ch
        CALL    crsr
        CALL    spce
        INC     ch
        CALL    crsr
        CALL    aste
        JMP LEAP1
;---------------------
lftt:
        CALL    lfts
        CMP     al,     'л'
        JNE     inxt2

        INC     cl
        JMP LEAP2

inxt2:

        CMP     al,     'X'
        JNE     nxt2     

        INC     cl
        JMP     LEAP2
nxt2:
        INC     cl
        CALL    crsr
        CALL    spce
        DEC     cl
        CALL    crsr
        CALL    aste
        JMP LEAP1
;---------------------
rghtt:
        CALL    rghts
        CMP     al,     'л'
        JNE     inxt3

        DEC     cl
        JMP LEAP2

inxt3:

        CMP     al,     'X'
        JNE     nxt3

        DEC     cl
        JMP LEAP2
nxt3:
        DEC     cl
        CALL    crsr
        CALL    spce
        INC     cl
        CALL    crsr
        CALL    aste
        JMP     LEAP1
asd:
;--------------------------------
        MOV     ax,     4c00h
        INT     21H

;--------------------------------
main    endp
;------------------------------
