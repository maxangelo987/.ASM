.model small
.code
org 100h

jmp main

plist label byte
maxlen db 59
actlen db ?
kybd db 60 dup('$'),0ah,0dh,'$'

plist1 label byte
maxlen1 db 59
actlen1 db ?
kybd1 db 60 dup('$'),0ah,0dh,'$'


word2 db ('ENTER OTHER STRING: '),0ah,0dh

ctr db 0

ctr1 db 0
newx db 0
color db 1
row1 db >
col1 db ?

main proc near

	mov ax,03h
	int 10h
	
	mov ah,0ah
	lea dx,plist
	int 21h
		
	mov ah,09h
	lea dx,kybd
	int 21h
	
	call curse 
	
	mov ah, 09h
	lea dx, word2
	int 21h

	call curse
		
	mov ah,0ah
	lea dx,plist1
	int 21h

	mov bp, 0

a1:
	mov al,actlen
	cmp ctr,al
	if e jmp exit
	if ne jmp b1
b1:

	mov ah,02h
	mov bh,00
	mov dh,05
	mov dl,newx
	int 10h

	mov bx, 0
	mov ch, actlen1
	mov ctr1, ch 

loop1:		
		cmp ctr1, 0
		if e jmp loop3
		
		mov dh, kybd1[bx]
		mov dl, kybd[bp]
		cmp dl, dh
		if e jmp color1
		jmp loop2
		
		loop2:
		 inc bx
		 dec ctr1
		 jmp loop1
	
	
loop3:
	mov bh,00
	mov bl, 07 
	mov al,kybd[bp]
	mov cx,0001h
	mov ah,09h
	int 10h
	
	inc ctr
	inc bp
	
	jmp b2
	
	

color1:
	mov bh,00
	mov bl,color
	mov al,kybd[bp]
	mov cx,0001h
	mov ah,09h
	int 10h
	
	inc ctr
	inc bp
	
	jmp b2
	
b2:
	inc newx
	mov al,color
	cmp al,15
	if e jmp b3
	if ne jmp b4
	
	
b3:
	mov color,1
	jmp a1
	
b4:
	inc color
	jmp a1
	
exit:
	int 20h
	
main endp
end main


curse proc near
        mov ah,02h
        mov dh,row1
        mov dl,col1
        mov bh,00
        int 10h
        ret
        curse endp